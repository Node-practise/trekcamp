<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input type="text" class="form-control" id="title" name="campground[title]" required>
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input type="text" class="form-control" id="location" name="campground[location]" required>
        <div class="valid-feedback">Looks good</div>
      </div>
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input type="text" class="form-control" id="image" name="campground[image]" required>
        <div class="valid-feedback">Looks good</div>
      </div> -->
      <input type="file" name="image" id="">
      <div class="mb-3">
        <label class="form-label" for="price">Compound price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">@</span>
          <input type="text" class="form-control" id="price-label" aria-describedby="price-label" placeholder="0" aria-label="price" required>
          <div class="valid-feedback">Looks good</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea type="text" class="form-control" id="description" name="campground[description]" required></textarea>
        <div class="valid-feedback">Looks good</div>
      </div>
      <button class="btn btn-primary my-3">Add Campground</button>
    </form>
    <a href="/campgrounds">All Campgrounds</a>

  </div>
</div>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  const forms = document.querySelectorAll('.validated-form')

  // Loop over them and prevent submission
  Array.from(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>